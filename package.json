{
  "name": "descent-quest-builder",
  "version": "1.0.0",
  "description": "A custom mission editor for descent board game",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "pack:osx": "electron-packager . --out=desktop_applications/mac --platform=darwin --arch=x64 --icon=./assets/icon.ico && npm run codesign",
    "pack:win32": "electron-packager . $npm_package_productName --out=desktop_applications/windows --platform=win32 --arch=ia32",
    "pack:win64": "electron-packager . --out=desktop_applications/windows --platform=win32 --arch=x64 app-version=1.0 --icon=./assets/icon.ico",
    
	"build": "npm run pack:osx"
  },
  "author": "Lorenzo Balducci",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^4.4.1",
    "electron": "^7.1.11",
    "electron-packager": "^14.2.0",
    "html2canvas": "^1.0.0-rc.5",
    "jquery": "^3.4.1",
    "jspdf": "^1.5.3",
    "popper.js": "^1.16.1"
  }
}
